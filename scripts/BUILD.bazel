"""
Kotlin-based scripts to help developers or perform continuous integration tasks.
"""

load("@io_bazel_rules_kotlin//kotlin:kotlin.bzl", "kt_jvm_binary", "kt_jvm_test")
load("//scripts/src/java/org/oppia/android/scripts/regex:regex_pattern_assets.bzl", "retrieve_regex_pattern_check_assets")

REGEX_PATTERN_CHECK_ASSETS = retrieve_regex_pattern_check_assets(
    "regex_pattern_assets",
    "//scripts/org/oppia/android/scripts/regex/assets",
)

# Visibility for libraries that have binaries defined at this package, and libraries defined at
# subpackage level.
package_group(
    name = "oppia_script_lib_visibility",
    packages = [
        "//scripts",
        "//scripts/src/java/org/oppia/android/scripts/...",
    ],
)

kt_jvm_binary(
    name = "regex_pattern_validation_check",
    testonly = True,
    data = REGEX_PATTERN_CHECK_ASSETS,
    main_class = "org.oppia.android.scripts.regex.RegexPatternValidationCheckKt",
    runtime_deps = ["//scripts/src/java/org/oppia/android/scripts/regex:regex_pattern_validation_check_lib"],
)

kt_jvm_test(
    name = "RegexPatternValidationCheckTest",
    testonly = True,
    srcs = ["src/test/org/oppia/android/scripts/regex/RegexPatternValidationCheckTest.kt"],
    data = REGEX_PATTERN_CHECK_ASSETS,
    deps = [
        "//scripts/src/java/org/oppia/android/scripts/regex:regex_pattern_validation_check_lib",
        "//testing:assertion_helpers",
        "//third_party:com_google_truth_truth",
        "//third_party:org_jetbrains_kotlin_kotlin-test-junit",
    ],
)

kt_jvm_binary(
    name = "xml_syntax_check",
    testonly = True,
    main_class = "org.oppia.android.scripts.XMLSyntaxCheck$Companion",
    runtime_deps = [":xml_syntax_check_lib"],
)

kt_jvm_library(
    name = "xml_syntax_check_lib",
    testonly = True,
    srcs = [
        "src/java/org/oppia/android/scripts/RepoFile.kt",
        "src/java/org/oppia/android/scripts/ScriptResultConstants.kt",
        "src/java/org/oppia/android/scripts/SyntaxErrorHandler.kt",
        "src/java/org/oppia/android/scripts/XMLSyntaxCheck.kt",
    ],
)

kt_jvm_test(
    name = "test_xml_syntax_check",
    testonly = True,
    srcs = ["src/test/org/oppia/android/scripts/XMLSyntaxCheckTest.kt"],
    test_class = "org.oppia.android.scripts.XMLSyntaxCheckTest",
    deps = [
        ":xml_syntax_check_lib",
        "//testing:assertion_helpers",
        "//third_party:com_google_truth_truth",
        "//third_party:org_jetbrains_kotlin_kotlin-test-junit",
    ],
)
